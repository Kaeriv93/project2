<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=currentVideo.title%></title>
    <link rel="stylesheet" href="/styles/show.css">
    <%-include('partials/links.ejs')%>
    <%-include('partials/header.ejs')%>
</head>
<body>
    
        
        <div class="main-video-section">
            <div class="current-video">
                <iframe width="1000px" height="550px" src="<%=currentVideo.videoData%>" 
                title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; 
                encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                </iframe>
                
                <%=currentVideo.channel.name%> - <%=currentVideo.title%>
            </div>
            <div class="video-title-likes">
                <p><%=currentVideo.views%> views <%=new Date().toLocaleDateString()%> 
                 
                    <button><i class=" fa-solid fa-thumbs-up"></i> <%=currentVideo.likes%></button>
                    <button><i class=" fa-solid fa-thumbs-down"></i>DISLIKE</button>
                    <button><i class="fa-solid fa-share"></i>SHARE</button>
                    <button><i class="fa-solid fa-download"></i>DOWNLOAD</button>
                    <button><i class="fa-solid fa-scissors"></i>CLIP</button>
                    <button><i class="fa-solid fa-plus"></i>SAVE</button>
                    
                
               
            
                </p> 
            </div>
            <hr>
            <div class="video-description-grid">

                <div class="video-description">
                    <img class ="profile-img"src="<%=currentVideo.thumbnail%>" alt="Artist Profile Picture">
                    <h3> <%=currentVideo.channel.name%><span><button class="i subscribe">Subscribe</button></span></h3>
                    <p><%=currentVideo.channel.subscribers%> Subscribers</p>
                    <p><%=currentVideo.description%></p>
                </div>
                
            </div>
            <hr>
            <div class="video-comments">

                <form class="add-comments" method="POST" action="/watch/<%=currentVideo._id %>">
                    <input type="hidden" name="isReply" value="false">
                    <input type="hidden" name="channel" value="626957058e1967faf6148714">
                    <input type="hidden" name="videoId" value="<%= currentVideo._id %>">
                    <input type="text" name="textContent" id="" placeholder="Add a comment...">
                    <input class="comment-button" type="submit" value="COMMENT">
                </form>


                <span><%=currentVideo.comments.length%> Comments<i class="fa-solid fa-arrow-down-wide-short"></i> SORT BY</span>
                    <%for(let i = 0; i < currentVideo.comments.length; i++) {%>
                        <% const comment = currentVideo.comments[i] %>
                    <div class="comments">
                        
                        <p><img class="profile-img"src="<%=currentVideo.channel.image%>" alt="placerholder"><%=comment.textContent%></p>
                        <div class="edit-delete">

                            <form method="POST" action="/watch/<%= comment._id %>?_method=PUT">
                                <input type="text" name="textContent" value="<%= comment.textContent %>">
                                <input type="hidden" name="videoId" value="<%= currentVideo._id %>">
                                <input class="edit-button" type="submit" value="Edit">
    
                            </form>
                            <form class="delete" method="POST" action="/watch/<%= comment._id %>?_method=DELETE">
                                <input type="hidden" name="videoId" value="<%= currentVideo._id %>">
                                <input class="delete-button" type="submit" value="X">
                            </form>
                        </div>
                       
                        
                        
                    </div>
                    <br>
                    <%}%>
            </div>
            <br>
          
        </div>
        

        
        <div class="side-video-playlist">
            <div class="tags">
                <button class="tag-button">Cars</button>
                <button class="tag-button">Science</button>
                <button class="tag-button">Cats</button>
                <button class="tag-button">Money</button>
            </div>
            <%for(let i = 0; i< 10; i++){%>
                <p><a class="video-title" href="/watch/<%=allVideos[i]._id%>"><img src="<%=allVideos[i].thumbnail%>" alt="<%=allVideos[i].title%>"><%= allVideos[i].title %></a></p>
           <% }%>

        </div>
        
        
        
        

    
    
</body>
</html>